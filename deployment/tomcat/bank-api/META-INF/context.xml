<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource name="jdbc/BankDB"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="20"
              maxIdle="10"
              maxWaitMillis="-1"
              username="sa"
              password=""
              driverClassName="org.h2.Driver"
              url="jdbc:h2:file:~/bankdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE;AUTO_SERVER=TRUE"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"/>
</Context>
